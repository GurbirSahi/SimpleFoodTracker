<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/foodnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Food One"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/id_txt"
                app:layout_constraintTop_toTopOf="@+id/id_txt" />

            <TextView
                android:id="@+id/calorieText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cals:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/foodnameText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />

            <TextView
                android:id="@+id/calorieNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18sp"
                android:paddingLeft="5sp"
                app:layout_constraintStart_toEndOf="@+id/calorieText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />

            <TextView
                android:id="@+id/proteinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prot(g):"
                android:textSize="18sp"
                android:paddingLeft="5sp"
                app:layout_constraintStart_toEndOf="@+id/calorieNumberText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />
            <TextView
                android:id="@+id/proteinNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18sp"
                android:paddingLeft="5sp"
                app:layout_constraintStart_toEndOf="@+id/proteinText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />
            <TextView
                android:id="@+id/carbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carb(g):"
                android:textSize="18sp"
                android:paddingLeft="5sp"
                app:layout_constraintStart_toEndOf="@+id/proteinNumberText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />
            <TextView
                android:id="@+id/carbNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18sp"
                android:paddingLeft="5sp"
                app:layout_constraintStart_toEndOf="@+id/carbText"
                app:layout_constraintTop_toBottomOf="@+id/foodnameText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>